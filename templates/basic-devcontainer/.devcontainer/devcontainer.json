    "runArgs": ["--name", "{{name}}"],
    "customizations": {
        "vscode": {
            "extensions": [
                "akiramiyakoda.cppincludeguard",
                "albymor.increment-selection",
                "llvm-vs-code-extensions.vscode-clangd",
